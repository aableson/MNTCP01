 (3.5,-1.20)
 (4.2,-1.18)
 (4.9,-1.10)
 (5.6,-0.96)
 (6.3,-0.72)
 (7.0,0)
}
\rput{0}(0,0){\tank}  
\rput{0}(10,0){\tankk}  


% Pipes
\def\pipe{
\psframe*[linecolor=white](0,0)(7,1)
\psline[linewidth=1.5\pslinewidth](0,0)(7,0)
\psline[linewidth=1.5\pslinewidth](0,1)(7,1)
}
%\rput{0}(4,1){\pipe}  
\rput{0}(4,3){\pipe}  
\rput{0}(-6,5){\pipe}  
\rput{0}(16,1){\pipe}  

% Direction arrows
\psline[linewidth=2.5\pslinewidth]{->}(-5,5.5)(-3,5.5)
\psline[linewidth=2.5\pslinewidth]{->}(6,3.5)(9,3.5)
%\psline[linewidth=2.5\pslinewidth]{<-}(6,1.5)(9,1.5)
\psline[linewidth=2.5\pslinewidth]{->}(19,1.5)(22,1.5)

% Flow rates
\rput(-4,7){5 L/min}
