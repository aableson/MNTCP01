(0.5,-0.72)
(1.0,-0.96)
(1.5,-1.10)
(2.0,-1.18)
(2.5,-1.20)
(3.0,-1.18)
(3.5,-1.10)
(4.0,-0.96)
(4.5,-0.72)
(5.0,0)
}
 \def\tankk{
 \psline[linewidth=1.5\pslinewidth](7,0)(7,8)
 \psline[linewidth=1.5\pslinewidth](0,0)(0,8)
